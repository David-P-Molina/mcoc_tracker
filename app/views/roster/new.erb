<h1>Create Your New Roster <strong><%= current_user.username %></strong></h1>
<div class="flash-messages">
    <% if flash[:error] %>
        <%= flash[:error]  %>
    <% elsif flash[:success] %>
        <%= flash[:success]  %>
    <% end %>
</div>
<p>Go to Champions tab, select filter icon, and sort champions alphabetically.</p>
<div class="form-container">
 <form action= "/roster/new" method="POST">  
<div class="row">
<% @champions.each do |champ| %>
    <center>    
    <div class="col-lg-9 champ-questions">
            <p>
                <img src="/images/champions/<%= champ.name %>.webp" style="width: 8vw"><br>
                <%= champ.name %> -
                <img src="/images/class images/(<%= champ.klass.name %>).webp" style="width: 2vw">
            </p>
            <div class="star-rating">
            <input type="checkbox" id="one_star" name="champion[one_star]" value="One Star">
            <label for="One Star"> 1 * &nbsp;&nbsp;</label>
            <input type="checkbox" id="two_star" name="champion[two_star]" value="Two Star">
            <label for="Two Star"> 2 * &nbsp;&nbsp;</label>
            <input type="checkbox" id="three_star" name="champion[three_star]" value="Three Star">
            <label for="Three Star"> 3 * &nbsp;&nbsp;</label><br>
            <input type="checkbox" id="four_star"   name="champion[four_star]" value="Four Star">
            <label for="Four Star"> 4 * &nbsp;&nbsp;</label>
            <input type="checkbox" id="five_star" name="champion[five_star]" value="Five Star">
            <label for="Five Star"> 5 * &nbsp;&nbsp;</label>
            <input type="checkbox" id="six_star" name="champion[six_star]" value="Six Star">
            <label for="Six Star"> 6 * &nbsp;&nbsp;</label>
            </div>
            <div class="favorite-wanted">
            <input type="checkbox" name="champion[favorite]" id="favorite" value="Favorite">
            <label for="favorite"> Favorite &nbsp;&nbsp;</label>
            <input type="checkbox" name="champion[wanted]" id="wanted" value="Wanted">
            <label for="Six Star"> Most Wanted </label>
            </div>
            <div class="notes">
            <label for="Notes"> Additional Notes: </label>
            <input type="text" name="champion[notes]" id="notes" placeholder="Use for War, Bleed Immune, etc." maxlength = "255">
            </div>
            <br>
            </div>
            </center>
            <% end %>
            </div>
            <input type="submit" value="Create Roster" style="width: 10vw; height: 3vw; float: right">
            </form>
            </div>